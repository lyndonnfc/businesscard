<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nfc.lyndon.businesscard.ui.activity.MainActivity">

    <TextView
        android:id="@+id/tv_list"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="@string/card_list"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14"
        android:background="@color/blue"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/layout_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_send"/>

    <TextView
        android:id="@+id/tv_send"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="@string/card_send"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14"
        android:background="@color/blue"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/layout_content"
        app:layout_constraintStart_toEndOf="@id/tv_list"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <FrameLayout
        android:id="@+id/layout_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_list"/>


</android.support.constraint.ConstraintLayout>
